<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="@dimen/nav_header_height"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:gravity="bottom"
             android:orientation="vertical"
             android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bruin_bear"
        android:scaleType="centerCrop"
        android:tint="#41000000"
       />
    <RelativeLayout
        android:id="@+id/nav_user_info_viewgroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nav_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:paddingLeft="@dimen/nav_header_vertical_spacing"
            android:paddingBottom="@dimen/nav_header_vertical_spacing"
            android:textSize="16sp"
            tools:text="JoeBruin@ucla.edu"/>
    <TextView
        android:id="@+id/nav_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/nav_header_vertical_spacing"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_above="@id/nav_user_email"/>

        <ImageView
            android:id="@+id/nav_user_profileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="50dp"
            android:tint="#11000000"
            android:padding="@dimen/nav_header_vertical_spacing"
            android:layout_above="@id/nav_user_name"/>

   <!-- MOVED TO LOGIN ACTIVITY LAYOUT     <com.facebook.login.widget.LoginButton
            android:id="@+id/fb_login_button"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            />-->

    </RelativeLayout>

</FrameLayout>
